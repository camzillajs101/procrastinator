<h1>New Task</h1>

<%= form_with model: @task do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :deadline_date, "Deadline" %><br>
    <%= f.date_field :deadline_date %>
    <%= f.time_field :deadline_time %>
  </div>

  <div class="field">
    <%= f.label :priority %><br>
    <%= f.select(:priority, [['None', 0],['!', 1],['!!', 2],['!!!', 3]]) %>
  </div>

  <div class="field">
    <%= f.label :required %>
    <%= f.check_box :required %>
  </div>

  <div class="field">
    <%= f.label :desc, "Description (optional)" %><br>
    <%= f.text_area :desc %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
